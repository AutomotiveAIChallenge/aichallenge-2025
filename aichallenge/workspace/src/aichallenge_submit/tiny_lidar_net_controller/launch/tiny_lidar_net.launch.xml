<launch>

  <arg name="tiny_lidar_net_node_param"  default="$(find-pkg-share tiny_lidar_net_controller)/config/tiny_lidar_net_node.param.yaml"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="scan_topic" default="/sensing/lidar/scan"/>
  <arg name="control_cmd_topic" default="/awsim/control_cmd"/>
  <arg name="ckpt_path" default="$(find-pkg-share tiny_lidar_net_controller)/ckpt/tinylidarnet_weights.npy"/>

  <!-- tiny_lidar_net_node -->
  <node pkg="tiny_lidar_net_controller" 
        exec="tiny_lidar_net_controller_node.py"
        name="tiny_lidar_net_controller_node"
        output="screen">

    <param from="$(var tiny_lidar_net_node_param)"/>
    <param name="model.ckpt_path" value="$(var ckpt_path)"/>
    <param name="use_sim_time" value="$(var use_sim_time)"/>
    <remap from="/scan" to="$(var scan_topic)"/>
    <remap from="/awsim/control_cmd" to="$(var control_cmd_topic)"/>
  </node>


</launch>
